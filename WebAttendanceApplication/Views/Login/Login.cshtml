@model WebAttendanceApplication.ViewModels.LoginViewModel;

@{
    ViewData["Title"] = "Login";
}

<div class="text-center align-items-center">
    <h1 class="display-4">Login</h1>
    <div class="row">
        <div class="col-md-4">
            <form asp-action="Login">
                <div asp-validation-summary="ModelOnly" class="text-danger">
                </div>
                    <div class="form-group">
                        <label asp-for="UtdId" class="control-label"></label>
                        <input asp-for="UtdId" class="form-control" />
                        <span asp-validation-for="UtdId" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Password" class="control-label"></label>
                        <input asp-for="Password" class="form-control" />
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <input type="submit" value="Log In!" class="btn btn-primary" />
                    </div>
            </form>
        </div>
    </div>
    <div class="row">
        <div class="col-md-2">
            <a class="btn btn-success" asp-controller="Login" asp-action="SetPassword">@ViewBag.Password</a>
        </div>
    </div>

    <div>
        Don't have an account? Contact your course professor to add you in the record
    </div>
</div>