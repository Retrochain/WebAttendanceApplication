@using System.Security.Claims

@{
    var userName = User.FindFirst(ClaimTypes.Name)?.Value; 
}

@if (userName != null)
{
    <form asp-controller="Login" asp-action="LogOut" method="post" id="logoutForm" class="navbar-right">
        <ul class="nav navbar-nv navbar-right">
            <li>Hello @userName!</li>
            <li><button type="submit" class="btn btn-link navbar-btn navbar-link">Log Off</button></li>
        </ul>
    </form>
}
else
{
    <ul class="nav navbar-nav navbar-right">
        <li><a class="nav-link text-dark" asp-controller="Login" asp-action="Login">Login</a></li>
    </ul>
}